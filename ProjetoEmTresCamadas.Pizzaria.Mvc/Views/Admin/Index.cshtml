
@{
    Layout = "_LayoutAdmin";
}
@model Pizza[]

<div class="container mt-4">
    <div class="row">
        <!-- Include the side menu partial view -->
        @Html.Partial("_SideMenu")

        <div class="col-md-9">
            <h2>Pizzas</h2>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Sabor</td>
                        <td>TamanhoDePizza</td>
                        <td>Descricao</td>
                        <td>Valor</td>
                        <th>
                            <a href="@Url.Action("Cadastro", "Pizzas")" class="btn btn-primary">Novo</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pizza in Model)
                    {
                        <tr>
                            <td>@pizza.Sabor</td>
                            <td>@pizza.TamanhoDePizza</td>
                            <td>@pizza.Descricao</td>
                            <td>@pizza.Valor</td>
                            <td>
                                <a asp-area="" asp-controller="Pizzas" asp-action="Details" asp-route-id="@pizza.Id" class="btn btn-primary btn-sm">Detalhes</a>
                                <a asp-area="" asp-controller="Pizzas" asp-action="Edit" asp-route-id="@pizza.Id" class="btn btn-success btn-sm">Editar</a>
                                <a asp-area="" asp-controller="Pizzas" asp-action="Delete" asp-route-id="@pizza.Id" class="btn btn-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-end">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index","Admin", new { page = i })">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
